<script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>

<script>
    $(document).ready(function () {
        debugger;
        GetComponent();
        GetInventory();
    });

    function RefreshLists() {
        GetComponent();
        GetInventory();
    }
    function GetComponent() {
        $.ajax({
            cache: false,
            type: "GET",
            url: 'http://localhost:49934/MyAPI/GetItemsList',
            //dataType: 'json',
            data: {IsInventory: "false"},
            success: function (result) {
                var html = '';
                $.each(result, function (key, item) {
                    html += '<tr>';
                    html += '<td> Name: </td>';
                    html += '<td>' + item.ItemName + '</td>';
                    html += '<td> , Description: </td>';
                    html += '<td>' + item.Description + '</td>';
                    html += '<td> , Price: </td>';
                    html += '<td>' + item.Price + '</td>';
                    html += '<td><a href="GetDetails/' + item.ItemId + '"> Details | </a >'
                    html += '<td><a onclick="AddInventory(' + item.ItemId + ');"> Add </a></td > ';
                    html += '</tr>';
                });
                $('#ComponentBody').html(html);                
            },
            error: function () {

            }
        });
    }


    function GetInventory() {
        $.ajax({
            cache: false,
            type: "GET",
            url: 'http://localhost:49934/MyAPI/GetItemsList',
            //dataType: 'json',
            data: { IsInventory: "true" },
            success: function (result) {
                var html = '';
                $.each(result, function (key, item) {
                    html += '<tr>';
                    html += '<td> Name: </td>';
                    html += '<td>' + item.ItemName + '</td>';
                    html += '<td> , Description: </td>';
                    html += '<td>' + item.Description + '</td>';
                    html += '<td> , Price: </td>';
                    html += '<td>' + item.Price + '</td>';
                    html += '<td><a href="GetDetails/' + item.ItemId + '"> Details | </a >'
                    html += '<td><a onclick="RemoveInventory(' + item.ItemId + ');"> Remove </a></td > ';
                    html += '</tr>';
                });
                $('#InventoryBody').html(html);

            },
            error: function () {

            }
        });
    }

    function AddInventory(ItemId) {
        debugger;
        $.ajax({
            cache: false,
            type: "GET",
            url: 'http://localhost:49934/MyAPI/AddInventory',
            //dataType: 'json',
            data: { Id: ItemId },
            success: function (result) {
                RefreshLists();

            },
            error: function () {

            }
        });
    }

    function RemoveInventory(ItemId) {
        debugger;
        $.ajax({
            cache: false,
            type: "GET",
            url: 'http://localhost:49934/MyAPI/RemoveInventory',
            //dataType: 'json',
            data: { Id: ItemId },
            success: function (result) {
                RefreshLists();

            },
            error: function () {

            }
        });
    }
</script>